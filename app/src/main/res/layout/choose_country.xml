<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.mintosoft.moneymanager.BorrowDetails">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Long Click Button View Available"
                android:textSize="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="11dp"
                android:elevation="3dp"
                android:layout_weight="1.06" />


        </android.support.v7.widget.CardView>

        <View
            android:background="@color/separator_line"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_height="0.5dp"
            android:layout_marginLeft="72dp"
            android:layout_width="match_parent" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Stick Notes while expenditure"
                android:textSize="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="11dp"
                android:elevation="3dp"
                android:layout_weight="1.06" />
        </android.support.v7.widget.CardView>
        <View
            android:background="@color/separator_line"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_height="0.5dp"
            android:layout_marginLeft="72dp"
            android:layout_width="match_parent" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Backup/Restore in Local Storage"
                android:textSize="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="11dp"
                android:elevation="3dp"
                android:layout_weight="1.06" />
        </android.support.v7.widget.CardView>
        <View
            android:background="@color/separator_line"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_height="0.5dp"
            android:layout_marginLeft="72dp"
            android:layout_width="match_parent" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Local Magic Bank Saving Account"
                android:textSize="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="11dp"
                android:elevation="3dp"
                android:layout_weight="1.06" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="232.0dip"
            android:layout_height="165.0dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/relativeLayout5"
            android:layout_below="@id/view"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@id/spinner"
                android:layout_width="200.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30.0dip"
                android:padding="10.0dip" />

            <CheckBox
                android:id="@id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/spinner"
                android:layout_below="@id/spinner"
                android:gravity="center"
                android:text="Accept Terms and Conditions" />

            <Button
                android:id="@id/main_custom_button"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/rect1"
                android:text="Done"
                android:textColor="#ffffffff" />


        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
