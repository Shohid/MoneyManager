<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/drawerlayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@id/coordinatorlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:expandedTitleMarginStart="70.0dip">

        <android.support.design.widget.AppBarLayout
            android:layout_width="fill_parent"
            android:layout_height="230.0dip"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@id/CollapsingToolbarLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">

                <android.support.v7.widget.Toolbar
                    android:id="@id/toolbar1"
                    android:layout_width="fill_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/colorPrimary"
                    android:minHeight="?actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@id/card_view"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@id/chart1"
                        android:layout_width="fill_parent"
                        android:layout_height="80.0dip" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@id/card_view2"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@id/chart_recharge"
                        android:layout_width="fill_parent"
                        android:layout_height="80.0dip" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@id/card_view3"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@id/chart_shoping"
                        android:layout_width="fill_parent"
                        android:layout_height="80.0dip" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@id/card_view4"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@id/chart_transport"
                        android:layout_width="fill_parent"
                        android:layout_height="80.0dip" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@id/card_view5"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@id/chart_debt"
                        android:layout_width="fill_parent"
                        android:layout_height="80.0dip" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@id/card_view6"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@id/chart_other"
                        android:layout_width="fill_parent"
                        android:layout_height="80.0dip" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@id/textview7"
                    android:layout_width="fill_parent"
                    android:layout_height="70.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#ffffeb3b"
                    android:gravity="center"
                    android:text="TextView 7"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#ff000000" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>