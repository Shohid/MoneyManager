<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffe6cece">

    <TextView
        android:id="@id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignLeft="@id/button3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/button3"
        android:background="#ffdc143c"
        android:gravity="center"
        android:padding="10.0dip"
        android:text="Set Total Budget"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#ffffffff"
        android:typeface="sans" />

    <EditText
        android:id="@id/userInputDialog"
        android:layout_width="160.0dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20.0dip"
        android:backgroundTint="#ffdc143c"
        android:gravity="center"
        android:hint="Enter amount"
        android:inputType="number"
        android:padding="20.0dip" />

    <Button
        android:id="@id/button3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#ffa52a2a"
        android:drawablePadding="-12.0dip"
        android:drawableTop="@drawable/check"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:text="Save"
        android:textColor="#ffffffff" />

    <ImageView
        android:id="@id/imageView4"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60.0dip"
        android:src="@mipmap/startup" />
</RelativeLayout>